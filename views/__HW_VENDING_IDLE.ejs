<div id="IDLEANIMATION" class="block_fullscreen">
    <video id="DIV_UI_VIDEO_IDLE" width="100%" height="100%" autoplay loop class="block_fullscreen">
        <source src="video/video_Idle.mp4" type="video/mp4">
    </video>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const videoIdle = document.getElementById('DIV_UI_VIDEO_IDLE');
            videoIdle.focus();
            setInterval(videoPlay, 1000);
            function videoPlay() {
                var videoIdle = document.getElementById('DIV_UI_VIDEO_IDLE');
                videoIdle.play();                
            }
        });
    </script>
</div>
